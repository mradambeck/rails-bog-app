
<% @creatures.each do |creature| %>
  <div class = "row">
    <div class = "col-xs-offset-1">
      <h4><%= link_to creature.name, show_creature_path(creature)%></h4>
      <p><em><%= creature.description %></em></p>
      <hr />
    </div>
  </div>
<% end %>

<div class = "row">
  <div class = "col-xs-offset-1">
    <%= button_to "Add a new Creature", new_creature_path, class: "btn btn-info", method: "get"%>
  </div>
</div>
